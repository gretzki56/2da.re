body{
	/* background:url(<%= asset_path('bg.png') %>) repeat #f9efd0; */
	background:url(<%= asset_path('main_bg.jpg') %>) repeat white;
}

#header .facebook a.auth{
	background:url(<%= asset_path('facebook.png') %>);
	background-repeat:no-repeat;
}

.vote a{
	background:url(<%= asset_path('vote.png') %>) no-repeat left;
}

.challenge .re_dare{
	background:url(<%= asset_path('re_dare.png') %>) 0 2px no-repeat;
}

#single .time li{
	background:url(<%= asset_path('time.png') %>) left no-repeat;
}

#single #entries .entry_vote{
	background:url(<%= asset_path('vote.png') %>) no-repeat left;
}

#fancybox-loading, .fancybox-close, .fancybox-prev span, .fancybox-next span {
	background-image: url(<%= asset_path('fancybox_sprite.png') %>);
}

#fancybox-loading div {
	background: url(<%= asset_path('fancybox_loading.gif') %>) center center no-repeat;
}

.fancybox-nav {
	background: transparent url(<%= asset_path('blank.gif') %>);
}

.form_fields label.fb{
	background:url(<%= asset_path('facebook.png') %>);
	background-repeat:no-repeat;
	background-position:0px -16px;
}


.challenge.public h3{
	text-indent:20px;
	background-image:url(<%= asset_path('public_small.png') %>);
	background-repeat:no-repeat;
}